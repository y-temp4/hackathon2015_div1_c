<h2>部屋一覧</h2>
<div class="row">
	<div class="col-lg-6">
		<% @rooms.each do |room| %>
		<div class="room-info-panel">
			<h2 class="room-title"><%= link_to room.title, room %></h2>
			<div class="image-box">
				<img src="" alt="" width="170" height="200">
			</div>
			<div class="description">
				<p><%= room.message %></p>
				<p><%= room.amount %></p>
				<p><%= room.address %></p>
				<button type="button" class="btn btn-primary btn-sm">
					参加
				</button>
			</div>
		</div>
		<% end %>
	</div>
</div>
