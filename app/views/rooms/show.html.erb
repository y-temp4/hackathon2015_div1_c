<h2 class="room-title"><%= @room.title %></h2>
<table class="table">
	<tr>
		<th>部屋ID</th>
		<td><%= @room.id %></td>
	</tr>
	<tr>
		<th>オーナー</th>
		<% if @user %>
		<td><%= @user.email %></td>
		<% else %>
		<td><%= "-" %></td>
		<% end %>
	</tr>
	<tr>
		<th>価格</th>
		<td><%= @room.price %></td>
	</tr>
	<tr>
		<th>詳細</th>
		<td><%= @room.message %></td>
	</tr>
	<tr>
		<th>募集人数</th>
		<td><%= @room.amount %></td>
	</tr>
	<tr>
		<th>住所</th>
		<td><%= @room.address %></td>
	</tr>
</table>

<%= link_to '参加', new_booking_path(room_id: @room.id), data: {confirm: "本当に参加しますか？"}, class: 'btn btn-primary' %>

<%= debug @room %>
