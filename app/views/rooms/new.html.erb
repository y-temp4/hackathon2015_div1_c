<h2>参加者を募集する</h2>
<%= form_for @room do |room| %>
<div class="">
	<%= room.label :title, "タイトル" %>
	<%= room.text_field :title %>
	<em>募集内容の見出しをつけてください</em>
</div>
<%= hidden_field_tag "room[user_id]", current_user %>

<div class="form-group">
	<%= room.label :title, "部屋名" %>
	<%= room.text_field :title, class: 'form-control' %>
</div>

<div class="form-group">
	<%= room.label :amount, "最大人数" %>
  <%= room.number_field :amount, :value => 0, step: 1, :class=>'form-control' %>
	<em>募集する最大人数を入力してください</em>
</div>

<div class="form-group">
	<%= room.label :price, "価格" %>
  <%= room.number_field :price, :value => 0, step: 100, :class=>'form-control' %>
	<em>室料の設定が可能です</em>
</div>

<div class="form-group">
	<%= room.label :message, "詳細内容" %>
	<%= room.text_field :message, class: 'form-control' %>
	<em>募集の内容を具体的に記入してください</em>
	<%= room.text_field :price, class: 'form-control' %>
</div>

<div class="form-group">
	<%= room.label :address, "住所" %>
	<%= room.text_field :address, class: 'form-control' %>
	<em>部屋の住所を入力してください</em>
</div>

<div class="form-group">
  <%= room.label :filename, "部屋の画像" %><br>
  <%= room.file_field :image %>
</div>

<div class="actions">
	<%= room.submit "登録する", class: 'btn btn-primary' %>
</div>

<% end %>
